
mkdir MyFirstRepo
cd MyFirstRepo


git init

echo 'def greet(name):\n    print(f"Hello, {name}!")\n\nif __name__ == "__main__":\n    user_name = input("Enter your name: ")\n    greet(user_name)' > hello.py


git add hello.py


git commit -m "Add hello.py with greeting function"


git remote add origin https://github.com/yourusername/MyFirstRepo.git


git branch -M main
git push -u origin main

print("Hello from ex1!")
